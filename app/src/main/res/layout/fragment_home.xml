<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_marginTop="53dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:paddingLeft="10dp"
            android:background="@drawable/edittextstroke"
            android:layout_width="330dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ellipse1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/seguisb"
                    android:textSize="12sp"
                    android:text="Terdekat"
                    android:layout_width="60dp"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ellipse11"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/seguisb"
                    android:textSize="12sp"
                    android:text="Diskon"
                    android:layout_width="60dp"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ellipse12"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/seguisb"
                    android:textSize="12sp"
                    android:text="Terlaris"
                    android:layout_width="60dp"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ellipse13"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/seguisb"
                    android:textSize="12sp"
                    android:text="Favorit"
                    android:layout_width="60dp"
                    android:layout_height="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeubold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori Restoran"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/lokal"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/seguisb"
                        android:textSize="12sp"
                        android:text="Lokal"
                        android:layout_width="60dp"
                        android:layout_height="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/jepang"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView

                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/seguisb"
                        android:textSize="12sp"
                        android:text="Jepang"
                        android:layout_width="60dp"
                        android:layout_height="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/korea"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/seguisb"
                        android:textSize="12sp"
                        android:text="Korea"
                        android:layout_width="60dp"
                        android:layout_height="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/cina"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/seguisb"
                        android:textSize="12sp"
                        android:text="Cina"
                        android:layout_width="60dp"
                        android:layout_height="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="38dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeubold"
                android:text="Rekomendasi Restoran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:orientation="horizontal"
                tools:listitem="@layout/cv_rekomen"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>