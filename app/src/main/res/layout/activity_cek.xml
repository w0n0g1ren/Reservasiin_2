<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical"
    android:paddingRight="30dp"
    tools:context=".CekActivity">

    <ImageView
        android:id="@+id/back_cek"
        android:layout_marginBottom="20dp"
        android:src="@drawable/rectangle21"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/seguisb"
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cek"
        android:padding="5dp"
        tools:listitem="@layout/cv_ck"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/seguisb"
        android:text="Tempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="Jenis Tempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="Jumlah Orang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="Tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="Jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="Catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="textEnd"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="textEnd"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="textEnd"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="01/02/2023"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="textEnd"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="09 : 00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="textEnd"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:text="Lorem Ipsum dodol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_pilih_pembayaran"
        android:textAllCaps="false"
        android:layout_marginLeft="179dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/seguisb"
        android:text="Pilih Pembayaran"
        android:textSize="14sp" />


</LinearLayout>